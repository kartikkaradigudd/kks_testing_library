{
    "compilerOptions": {
      "target": "ES6",
      "module": "CommonJS",
      "declaration": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "resolveJsonModule": true,
      "noImplicitAny": true,
      "outDir": "./dist",
      "alwaysStrict": true
    },
    "include": ["src"],
    "exclude": ["node_modules"]
  }